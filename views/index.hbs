<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>code editor</title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <div class="editor-container">
        <div class="editor">
            <div class="editor-header">
                <span class="tab-btn active" data-type="html">HTML</span>
                <span class="tab-btn" data-type="css">CSS</span>
                <span class="tab-btn" data-type="js">JS</span>
            </div>
            <form action="/code" method="post">
                <div class="editor-tabs">


                    <textarea name="htmlCode" id="html-code" class="tab avtive" resize="none" onkeyup="run()"></textarea>

                    <textarea name="cssCode" id="css-code" class="tab" resize="none" onkeyup="run()"></textarea>

                    <textarea name="jsCode" id="js-code" class="tab" onkeyup="run()"></textarea>
                </div>

                <div class="run-btn">
                    <button type="submit" id="runButton" class="run" onclick="">Run</button>
                </div>

            </form>
